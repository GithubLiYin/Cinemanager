<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:text="添加影院"
        android:textColor="@color/bank_FF6C6C6C"
        android:textSize="40sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/activity_cinema_dialog_layout_area"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white"
        android:gravity="center_vertical">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="选择地区"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/activity_cinema_dialog_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|right"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="点击"
            android:textColor="@android:color/holo_green_light"
            android:textSize="16sp" />

    </RelativeLayout>

    <EditText
        android:id="@+id/activity_cinema_dialog_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入影院名称" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/activity_cinema_dialog_yes_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="确定" />

        <Button
            android:id="@+id/activity_cinema_dialog_no_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消" />

    </LinearLayout>
</LinearLayout>