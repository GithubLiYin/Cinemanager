<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:text="添加订单"
        android:textColor="@color/bank_FF6C6C6C"
        android:textSize="40sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/add_order_edt_movie_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:hint="@string/print_movie_name"
        android:singleLine="true" />

    <LinearLayout
        android:id="@+id/add_order_choice_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/choose_watch_time"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/add_order_select_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="点击"
            android:textColor="@android:color/holo_green_light"
            android:textSize="20sp" />
    </LinearLayout>

    <Spinner
        android:id="@+id/add_order_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </Spinner>

    <EditText
        android:id="@+id/add_order_edt_movie_price"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:hint="@string/print_price"
        android:inputType="numberDecimal"

        android:singleLine="true" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/add_order_btn_create"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="生成二维码" />

        <Button
            android:id="@+id/add_order_btn_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="保存" />

        <Button

            android:id="@+id/add_order_btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消" />
    </LinearLayout>

    <ImageView
        android:id="@+id/add_order_rq_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/timg" />
</LinearLayout>